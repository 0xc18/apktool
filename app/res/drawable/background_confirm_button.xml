<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/app_button_corner" />
            <stroke android:width="1.0dip" android:color="@color/white" />
            <solid android:color="#ff2f3043" />
        </shape>
    </item>
    <item>
        <ripple android:color="@color/black">
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/app_button_corner" />
                    <gradient android:startColor="#ff2f3043" android:endColor="#ff2f3043" android:angle="0.0" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>
